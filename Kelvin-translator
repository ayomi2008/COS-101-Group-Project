st.set_page_config(page_title="Dictionary Translator", layout="centered")

st.title("üìò Dictionary Translator")
st.write("Translate **20 English words** into **5 different languages** using Streamlit.")

word = st.selectbox("Select an English word:", sorted(translations.keys()))
language = st.selectbox("Select a language:", ["French", "Spanish", "German", "Italian", "Yoruba"])

if st.button("Translate"):
    translation = translations[word][language]
    st.success(f"**{word.capitalize()}** in **{language}** is **{translation}**")